.max-header-wrapper {
  display: none;
  background: #000;
  height: 10rem;
  @media (max-width 800px) {
    display: block;
  }
}
.main-wrapper {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height 100%
  z-index: 100;
  background: transparent;
}
.nav-wrapper {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 100;
  width: 100%;
  color: #fff;
  line-height: 3rem;
  .max {
    margin: 0 auto;
    background: #000;
    max-width: 800px;
    text-align: center;
    @media (max-width 800px) {
      display: none;
    }
    ul {
      li {
        display: inline-block;
        min-width: 6rem;
        text-align: center;
        a {
          padding: 0 .5rem;
          display: block;
          color: #fff;
          box-sizing: border-box;
          -webkit-box-sizing: box-sizing;
          border-bottom: 2px solid #000000;
        }
        a:hover, a:active{
          background: #666;
          color: #fff;
        }
        .is-active {
          background: #fff;
          color: #000;
        }
      }
    }
  }
  .min {
    display: none;
    width: 100%;
    background: #000;
    @media (max-width: 800px) { display: block; }
    .min-menu-btn {
      font-weight: 100;
      margin-left: 1rem;
      color: #fff;
    }
    .sub-nav-wrapper {
      display: none;
      background: #fff;
      box-shadow: 5px 5px 5px #ccc;
      li {
        a {
          padding-left: 1rem;
          display: block;
          color: #000;
        }
        a:hover, a:active{
          background: #ccc;
          color: #000;
        }
      }
    }
  }
}