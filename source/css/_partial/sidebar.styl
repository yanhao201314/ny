.max-sidebar-wrapper{
  position: fixed;
  width: 190px;
  height: 100%;
  @media (max-width 800px) {
    display: none;
  }
  .sidebar-widget {
    padding-bottom: 40px;
    background: #fff;
    background: rgba(255,255,255,0.8);
    .sidebar-header-title {
      background-color: #000;
      line-height 6rem
      height: 8rem;
      color: #fff;
      text-align: center;
      /* text-transform: uppercase; */
      font-weight: 800;
      letter-spacing: 0.8px;
      font-size: 1.2rem;
      font-family: "Raleway", Sans-serif;
    }
    .sidebar-inner {
      margin-top: -3rem;
      position: relative;
      padding: 20px 10px;
      color: #999;
      text-align: center;
      .author-image {
        display: block;
        margin: 0 auto;
        padding: 2px;
        max-width: 56px;
        height: auto;
        border: 1px solid #eee;
      }
      .author-name {
        margin-top: .5rem;
        text-align: center;
        color: #222;
        font-weight: 600;
      }
      .description {
        margin-bottom: .5rem;
        text-align: center;
        font-size: .9rem;
        color: #999;
      }
      .state {
        overflow: hidden;
        line-height: 1.4;
        white-space: nowrap;
        text-align: center;
        .state-item {
          display: inline-block;
          padding: 0 .5rem;
          border-left: 1px solid #eee;
          a {
            border-bottom: none;
            .count {
              display: block;
              text-align: center;
              color: inherit;
              font-weight: 600;
              font-size: .8rem;
            }
            .name {
              font-size: .8rem;
              color: #999;
            }
          }
        }
        .state-item:first-child {
          border-left: none;
        }
      }
      .widget-socials {
        line-height 2rem
        text-align: center;
        a {
          margin: 3px 8px;
          padding: 5px;
          font-size: 1.2rem;
          color: #3C3C3C;
        }
      }
    }
  }
  .sidebar-footer {
    position: fixed;
    bottom: 0;
    background: #000;
    width: 190px;
    height: 3rem;
  }
}



.widget-container {
  ul {
    padding: 1rem .5rem;
    li {
      padding: .5rem 0;
      a {
        color: #3c3c3c;
        font-size: .9rem;
      }
    }
  }
}

